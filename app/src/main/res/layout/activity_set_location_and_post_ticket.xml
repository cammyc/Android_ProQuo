<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.scalpr.scalpr.SetLocationAndPostTicket">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapSetSellLocation"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvEditAttractionDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mapSetSellLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="4dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Set Location and Post Ticket"
            android:textAllCaps="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/bSetLocationAndPostTicket"
            android:background="@drawable/button_background_green"
            android:textColor="#FFF"
            android:textStyle="bold" />

        </android.support.v7.widget.CardView>



</RelativeLayout>
