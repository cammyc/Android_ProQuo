<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_screen_slide_page.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tutorial_slide1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView style="?android:textAppearanceMedium"
              android:padding="16dp"
              android:lineSpacingMultiplier="1.2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Welcome!"
              android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>

        <TextView style="?android:textAppearanceMedium"
                android:padding="16dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="You can now request tickets!"
            />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="A blue border indicates the ticket is being requested."
            />


        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No border indicates the ticket is being sold."
            android:textAlignment="center"
            />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#BBB"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_centerHorizontally="true"
                android:layout_centerVertically="true">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/colorPrimary"
                android:layout_margin="5dp"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="#DDD"
                android:layout_margin="5dp"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="#DDD"
                android:layout_margin="5dp"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="#DDD"
                android:layout_margin="5dp"
                />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>