<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_screen_slide_page.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tutorial_slide4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEE">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView style="?android:textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:text="Contact Someone!"
            android:textColor="@color/white" />

        <TextView style="?android:textAppearanceMedium"
                  android:padding="16dp"
                  android:lineSpacingMultiplier="1.2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textColor="#000"
                  android:text="Tap on a post to learn more" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIwDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="July 17th, 2017"
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">





                    <TextView
                        android:id="@+id/tvIwAttractionName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorAsphault"
                        android:textSize="18dp"
                        android:text="New York Yankees"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIwVenueName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        android:text="Yankee Stadium"/>


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ivIwImage"
                        android:layout_gravity="center_horizontal" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/snippet1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tickets: "
                            android:textColor="@color/colorAsphault"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvIwNumTickets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAsphault"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/snippet3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: "
                            android:textColor="@color/colorAsphault"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvIwPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAsphault"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="$50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvIwDescriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Front row seats behind first base!"
                            android:textColor="@color/colorAsphault"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/bContactSeller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CONTACT SELLER"
                        android:textColor="@color/colorAccent"
                        android:background="#FFF"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:rotation="180"
                android:src="@drawable/triangle" />


        </LinearLayout>


        <TextView style="?android:textAppearanceMedium"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="If you want to contact the buyer or seller, just tap the info window"/>

    </LinearLayout>


</RelativeLayout>